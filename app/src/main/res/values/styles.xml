<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/black</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="android:windowBackground">@color/windowBackground</item>
  </style>
  <!--style for BottomDialog-->
  <style name="BottomDialog" parent="android:Theme.DeviceDefault.Dialog">
    <item name="android:windowTitleStyle">@null</item>
    <item name="android:windowBackground">@color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowAnimationStyle">@style/BottomDialogAnim</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
  </style>

  <style name="BottomDialogAnim" parent="android:Animation">
    <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
    <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
  </style>

  <style name="Theme_Scrollbar">
    <item name="android:scrollbarTrackVertical">@drawable/scrollbar_vertical_track</item>
    <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
    <item name="android:scrollbarSize">4dip</item>
  </style>

  <style name="FragmengOneTabStyle" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">@color/transparent</item>
    <item name="tabIndicatorHeight">0dp</item>
    <item name="tabPaddingStart">10dp</item>
    <item name="tabPaddingEnd">10dp</item>
    <item name="tabTextAppearance">@style/FragmengOneTabText</item>
    <item name="tabSelectedTextColor">@color/main_color</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="FragmengOneTabText" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/text_nomal</item>
    <item name="textAllCaps">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="painc_buy_time">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:lineSpacingExtra">3dip</item>
    <item name="android:textSize">@dimen/dimen_text_mini</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="addreviewRatingBar" parent="@android:style/Widget.RatingBar">
    <item name="android:progressDrawable">@drawable/add_review_rating_bar</item>
    <item name="android:minHeight">20dip</item>
    <item name="android:maxHeight">20dip</item>
  </style>

  <style name="MyGoodsStyle">
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
  </style>

  <style name="OrderAction" parent="@style/Btn_Wrap_White_Text">
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:minWidth">75dp</item>
    <item name="android:background">@color/red</item>
  </style>

  <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">

    <item name="android:button">@drawable/check_box_ls</item>

  </style>
</resources>
