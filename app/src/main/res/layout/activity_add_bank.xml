<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

  <include layout="@layout/titlebar_common"/>

  <LinearLayout
      android:layout_marginTop="@dimen/dp_8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="horizontal"
      android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="真实姓名"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_add_bank_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:hint="请输入持卡人姓名"
        android:maxLength="11"
        android:textSize="14sp"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="horizontal"
      android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证号"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_add_bank_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:hint="请输入正确的身份证号"
        android:inputType="number"
        android:maxLength="18"
        android:textSize="14sp"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_marginTop="@dimen/dp_8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="horizontal"
      android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开户银行"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_add_bank_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:hint="请选择 开户银行"
        android:maxLength="11"
        android:textSize="14sp"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="horizontal"
      android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="银行卡号"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_add_bank_card_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:hint="请输入银行卡号"
        android:inputType="number"
        android:maxLength="19"
        android:textSize="14sp"
        />
  </LinearLayout>

  <Button
      android:id="@+id/btn_recharge_click"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="30dp"
      android:textSize="@dimen/dp_16"
      android:textColor="@color/white"
      android:background="@drawable/selector_item_press_red"
      android:text="确认添加"
      />
</LinearLayout>
