<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.three.setting.SettingActivity">

    <include layout="@layout/titlebar_common"/>
    
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/activity_setting_ll_aboutUs"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp"
        >
        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="关于我们"
            android:layout_weight="1"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:placeholderImage="@drawable/more"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/activity_setting_ll_yijian"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp"
        >
        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="意见反馈"
            android:layout_weight="1"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:placeholderImage="@drawable/more"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/activity_setting_ll_help"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp"
        >
        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="帮助中心"
            android:layout_weight="1"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:placeholderImage="@drawable/more"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/activity_setting_ll_checkUpdate"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp"
        >
        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="检查更新"
            android:layout_weight="1"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:visibility="invisible"
            android:layout_height="40dp"
            fresco:placeholderImage="@drawable/more"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    
</LinearLayout>
