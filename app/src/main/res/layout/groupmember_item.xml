<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/white"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/fragmengtalk_child_item_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_logo"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/fragmengtalk_child_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_nomal"
        android:textSize="@dimen/text14"
        android:text="Ray"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fragmengtalk_child_item_img"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/fragmengtalk_child_item_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextGray"
        android:textSize="@dimen/text12"
        android:text="军长"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/group_detail_img_all"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
       />
    <ImageView
        android:id="@+id/group_detail_img_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:src="@drawable/more"/>
</RelativeLayout>