<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.three.setting.AboutUsActivity">

    <include layout="@layout/titlebar_common"/>
    
    
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="80dp"
        android:layout_height="80dp"
        fresco:placeholderImage="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />
    <com.xiangying.fighting.widget.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_about_us_tv_version_code"
        android:text="版本号：1.0.0 "
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTextGray"
        />
    <com.xiangying.fighting.widget.FontTextView
        android:id="@+id/activity_about_us_tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="4dp"
        />

    <com.xiangying.fighting.widget.FontTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:text="战斗吧公司 版权所有"
        />
    <com.xiangying.fighting.widget.FontTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:text="Copyright © 2009-2016"
        android:gravity="center_horizontal"
        />
</LinearLayout>
