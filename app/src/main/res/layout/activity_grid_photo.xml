<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layout_bg"
>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <com.xiangying.fighting.widget.FontTextView
            android:id="@+id/title_bar_common_tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_click"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="选择"
            android:visibility="gone"
            android:textSize="18sp" />
        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="聊天图片"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/title_bar_common_iv_operate_1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@drawable/selector_item_press_touming"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:src="@drawable/back_white" />

    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp"
        android:numColumns="3"
        android:id="@+id/gridphoto_grid"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/grid_photo_liner_delete"
        android:background="@drawable/bg_click">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text18"
        android:textColor="@color/white"
        android:text="删除"
        android:gravity="center"
        android:visibility="gone"
        android:background="#2d2d2d"
        />
        </LinearLayout>
</LinearLayout>
