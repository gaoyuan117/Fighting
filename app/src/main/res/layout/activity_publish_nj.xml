<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.two.findjob.PublishNewJobActivity">

  <include layout="@layout/titlebar_common"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/title_bar"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:background="@color/white"
          android:orientation="horizontal"
          >

        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="职位名称："
            />

        <com.xiangying.fighting.widget.ClearEditText
            android:id="@+id/activity_publish_NJ_et_zhiwei"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="14sp"
            />


      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="0.3dp"
          android:background="@color/gapColor"/>

      <LinearLayout
          android:id="@+id/activity_publish_NJ_ll_fenlei"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:background="@color/white"
          android:clickable="true"
          android:orientation="horizontal"
          >

        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="职位分类"
            />

        <com.xiangying.fighting.widget.FontTextView
            android:id="@+id/activity_publish_NJ_tv_fenlei"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="6dp"
            android:text="请选择"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            fresco:placeholderImage="@drawable/more"
            />

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="0.3dp"
          android:background="@color/gapColor"/>

      <LinearLayout
          android:id="@+id/activity_publish_NJ_ll_xingzi"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:background="@color/white"
          android:clickable="true"
          android:orientation="horizontal"
          >

        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="薪资待遇 "
            />

        <com.xiangying.fighting.widget.FontTextView
            android:id="@+id/activity_publish_NJ_tv_xingzi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="6dp"
            android:text="请选择"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            fresco:placeholderImage="@drawable/more"
            />

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="8dp"
          />

      <LinearLayout
          android:id="@+id/activity_publish_NJ_ll_area"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:background="@color/white"
          android:clickable="true"
          android:orientation="horizontal"
          >

        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="工作地区 "
            />

        <com.xiangying.fighting.widget.FontTextView
            android:id="@+id/activity_publish_NJ_tv_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="6dp"
            android:text="请选择"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            fresco:placeholderImage="@drawable/more"
            />

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="0.3dp"
          android:background="@color/gapColor"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:background="@color/white"
          android:orientation="horizontal"
          >

        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="详细地址："
            />

        <com.xiangying.fighting.widget.ClearEditText
            android:id="@+id/activity_publish_NJ_et_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:singleLine="true"
            android:textSize="14sp"
            />


      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="0.3dp"
          android:background="@color/gapColor"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:background="@color/white"
          android:visibility="gone"
          android:orientation="horizontal"
          >

        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="公司名称："
            />

        <com.xiangying.fighting.widget.ClearEditText
            android:id="@+id/activity_publish_NJ_et_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:singleLine="true"
            android:textSize="14sp"
            />


      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="0.3dp"
          android:background="@color/gapColor"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:background="@color/white"
          android:orientation="horizontal"
          >

        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="联系电话："
            />

        <com.xiangying.fighting.widget.ClearEditText
            android:id="@+id/activity_publish_NJ_et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="14sp"
            />


      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="8dp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="vertical"
          >

        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="岗位职责："
            />

        <EditText
            android:id="@+id/activity_publish_NJ_et_zhize"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入该职位的岗位职责"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            />

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="8dp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="vertical"
          >

        <com.xiangying.fighting.widget.FontTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="任职条件："
            />

        <EditText
            android:id="@+id/activity_publish_NJ_et_tiaojian"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入该职位的任职条件"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            />

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="12dp"/>

      <com.xiangying.fighting.widget.FontTextView
          android:id="@+id/activity_publish_NJ_tv_publish"
          android:layout_width="match_parent"
          android:layout_height="38dp"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:background="@drawable/selector_item_press_red"
          android:clickable="true"
          android:gravity="center"
          android:text="发布"
          android:textColor="@color/white"
          android:textStyle="bold"
          />
    </LinearLayout>


  </ScrollView>

</LinearLayout>
