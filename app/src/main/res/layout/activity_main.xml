<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_ll_viewgroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/flag_ll"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/white_bg_with_bodler"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/activity_main_ll_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/activity_main_iv_first"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/zhuye" />

                <com.xiangying.fighting.widget.FontTextView
                    android:id="@+id/activity_main_tv_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="战斗吧"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/activity_main_ll_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="2.0dp"
                    android:id="@+id/activity_main_iv_two"
                    android:layout_centerHorizontal="true"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/fagui" />

                <com.xiangying.fighting.widget.FontTextView
                    android:id="@+id/activity_main_tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="好的"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/activity_main_iv_two"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />

            </RelativeLayout>

            <LinearLayout

                android:id="@+id/activity_main_ll_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/activity_main_iv_three"

                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/wode" />

                <com.xiangying.fighting.widget.FontTextView
                    android:id="@+id/activity_main_tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="我"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>



        </LinearLayout>
        <FrameLayout
            android:id="@+id/activity_main_fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/flag_ll"
            android:layout_weight="1"></FrameLayout>

    </RelativeLayout>

</RelativeLayout>
