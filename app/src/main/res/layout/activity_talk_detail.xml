<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.first.armyuser.UserTalkDetailActivity">
    <include layout="@layout/titlebar_common"
        android:id="@+id/title_bar_common_rv_viewGroup1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_bar_common_rv_viewGroup1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/talk_detail_rela_user"
                android:padding="10dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/group_detail_img_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    fresco:placeholderImage="@drawable/ic_logo"
                    fresco:actualImageScaleType="centerCrop"
                    />

                <TextView
                    android:layout_toRightOf="@+id/group_detail_img_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text14"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/group_detail_tv_name"
                    android:textColor="@color/text_nomal"
                    android:text="纷飞"/>

                <TextView
                    android:layout_toRightOf="@+id/group_detail_img_avatar"
                    android:layout_width="wrap_content"
                    android:layout_alignBottom="@+id/group_detail_img_avatar"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="@dimen/text14"
                    android:id="@+id/group_detail_tv_id"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorTextGray"
                    android:text="2015，继续加油"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/more"/>
            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/bg_main"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:id="@+id/group_talk_detail_liner_zhiding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="置顶聊天"
                    android:textColor="@color/text_nomal"/>

                <CheckBox
                    android:id="@+id/group_talk_detail_check_zhiding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/bg_checkbox"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_main"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:id="@+id/group_talk_detail_liner_miandarao">">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="消息免打扰"
                    android:textColor="@color/text_nomal"/>

                <CheckBox
                    android:id="@+id/group_talk_detail_check_miandarao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:button="@null"
                    android:checked="false"
                    android:background="@drawable/bg_checkbox"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/bg_main"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_click"
                android:id="@+id/group_talk_detail_liner_tupian">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="聊天图片"
                    android:textColor="@color/text_nomal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/more"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_main"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_click"
                android:id="@+id/group_talk_detail_liner_lookcontent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="查找聊天内容"
                    android:textColor="@color/text_nomal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/more"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_main"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_click"
                android:id="@+id/group_talk_detail_liner_clearcontent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="清空聊天记录"
                    android:textColor="@color/text_nomal"/>
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/bg_main"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_click"
                android:id="@+id/group_talk_detail_liner_jubao">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="举报"
                    android:textColor="@color/text_nomal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="horizontal"
                android:background="@color/bg_main">

            </LinearLayout>
        </LinearLayout>

</RelativeLayout>
