<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/commu_item_img_portrait"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="10dp"
      android:src="@drawable/ic_logo"
      />

  <RelativeLayout
      android:id="@+id/com_item_rela"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="-60dp"
      >
    <ImageView
        android:id="@+id/commu_item_img_portrait1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/commu_item_liner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/commu_item_img_portrait1"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/commu_item_img_portrait1"
        android:gravity="center_vertical">

      <TextView
          android:id="@+id/commu_item_tv_nickname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="哥赫巴德猜想"
          android:textColor="#FF125898"
          android:textSize="14dp"/>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>
      </RelativeLayout>

    </LinearLayout>


    <!-- <FrameLayout
         android:id="@+id/commu_item_more_frame"
         android:layout_width="30dp"
         android:layout_height="20dp"
         android:layout_alignParentRight="true"
         android:layout_marginTop="0dp"
         android:layout_marginRight="5dp"
         android:layout_below="@+id/commu_item_tv_time"
         />
       <ImageView
           android:id="@+id/commu_item_img_more"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginTop="10dp"
           android:layout_marginRight="15dp"
           android:layout_below="@+id/commu_item_tv_time"
           android:src="@drawable/icon_option"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/commu_item_img_portrait1"
        android:orientation="vertical">

      <LinearLayout
          android:id="@+id/commu_item_liner_content"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:id="@+id/commu_item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:text="生活中，美妙的事情多不胜数。大家都明白道理很简单，就看你怎么看待事情。"
            android:textColor="@color/text_nomal"
            android:textIsSelectable="false"
            android:textSize="15sp"
            />
        <!-- <com.facebook.drawee.view.SimpleDraweeView
             android:id="@+id/commu_item_img_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="15dp"
             android:layout_width="223dp"
             android:layout_height="wrap_content"
             fresco:actualImageScaleType="fitStart"
             fresco:placeholderImage="@drawable/bg_default_image"
             android:layout_marginTop="10dp"
             />-->
        <ImageView
            android:id="@+id/commu_item_img_content"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:maxHeight="223dp"
            android:maxWidth="250dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="70dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="5dp"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/commu_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="刚刚"
        android:textColor="@color/colorTextGray"
        android:textSize="10dp"/>

    <LinearLayout
        android:id="@+id/commu_item_linerzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/commu_item_linertalk1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/commu_item_img_zan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingRight="5dp"
          android:src="@drawable/like_button_icon"
          />

      <TextView
          android:id="@+id/commu_item_tv_zan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="14"
          android:textColor="#b6b6b6"
          android:textSize="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/commu_item_linertalk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/commu_item_img_talk"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="5dp"
          android:src="@drawable/commont_button_icon"
          />

      <TextView
          android:id="@+id/commu_item_tv_talk"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="32"
          android:textColor="#b6b6b6"
          android:textSize="12sp"/>
    </LinearLayout>
  </RelativeLayout>
  <!-- <View
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:layout_marginTop="15dp"
       android:background="#dddddd"/>-->
  <LinearLayout
      android:id="@+id/commu_item_liner_talk"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:layout_marginLeft="70dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="-10dp"
      android:background="@drawable/ic_comment2"
      android:orientation="vertical"
      android:paddingBottom="10dp"
      android:paddingTop="15dp">

    <TextView
        android:id="@+id/commu_item_tv_alltalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="查看全部32条评论"
        android:textColor="@color/text_nomal"
        android:textSize="12dp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/commu_item_tv_talk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="美美的幸福：时间不会让我忘记你。"
        android:textColor="#525252"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/commu_item_tv_talk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="#525252"
        android:visibility="visible"
        />
  </LinearLayout>
</LinearLayout>
