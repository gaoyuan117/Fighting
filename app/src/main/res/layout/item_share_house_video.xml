<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/iv_item_img_portrait"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="10dp"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="-60dp"
      >

    <ImageView
        android:id="@+id/commu_item_img_portrait1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/commu_item_img_portrait1"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/commu_item_img_portrait1"
        android:gravity="center_vertical">

      <TextView
          android:id="@+id/tv_item_tv_nickname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="哥赫巴德猜想"
          android:textColor="#FF125898"
          android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/commu_item_img_portrait1"
        android:orientation="vertical">

      <LinearLayout
          android:id="@+id/commu_item_liner_content"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:text="生活中，美妙的事情多不胜数。大家都明白道理很简单，就看你怎么看待事情。"
            android:textColor="@color/text_nomal"
            android:textIsSelectable="false"
            android:textSize="15sp"
            />

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/jc_player"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:minHeight="100dp"
            android:layout_height="150dp"/>
      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>
  <LinearLayout
      android:id="@+id/commu_item_liner_talk"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:layout_marginLeft="70dp"
      android:layout_marginRight="10dp"
      android:background="@drawable/ic_comment2"
      android:orientation="vertical"
      android:paddingBottom="10dp"
      android:paddingTop="15dp">

    <TextView
        android:id="@+id/commu_item_tv_alltalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="查看全部32条评论"
        android:textColor="@color/text_nomal"
        android:textSize="12sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/commu_item_tv_talk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="美美的幸福：时间不会让我忘记你。"
        android:textColor="#525252"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/commu_item_tv_talk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textColor="#525252"
        android:textSize="12sp"
        android:visibility="gone"
        />
  </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="70dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="5dp"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="刚刚"
        android:textColor="@color/colorTextGray"
        android:textSize="10dp"/>

    <LinearLayout
        android:id="@+id/ll_item_report"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/tv_item_tv_time"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="5dp"
          android:src="@drawable/icon_report"
          />
      <TextView
          android:id="@+id/tv_item_report"
          android:layout_width="wrap_content"
          android:text="投诉"
          android:textSize="@dimen/dp_10"
          android:textColor="@color/colorTextGray"
          android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item_linerzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/commu_item_linertalk1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:paddingRight="5dp"
          android:id="@+id/iv_like"
          android:src="@drawable/like_button_icon"
          />

      <TextView
          android:id="@+id/tv_item_zan_num"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="14"
          android:textColor="#b6b6b6"
          android:textSize="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/commu_item_linertalk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:layout_marginRight="5dp"
          android:src="@drawable/commont_button_icon"
          />

      <TextView
          android:id="@+id/tv_item_comment_num"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:text="32"
          android:textColor="#b6b6b6"
          android:textSize="12sp"/>
    </LinearLayout>
  </RelativeLayout>
</LinearLayout>
