<?xml version="1.0" encoding="utf-8"?>
<com.xiangying.fighting.widget.pullableview.PullToRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_pull_refresh_view_show"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <include layout="@layout/refresh_head" />
    <com.xiangying.fighting.widget.pullableview.PullableListView
        android:id="@+id/common_listview_show"
        style="@style/Theme_Scrollbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/gapColor"
        android:dividerHeight="0.5dip"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:listSelector="#13000000"
       />
    <include layout="@layout/load_more" />
</com.xiangying.fighting.widget.pullableview.PullToRefreshLayout>