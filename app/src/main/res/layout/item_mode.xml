<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0.0dip"
    android:background="@color/white">

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/item_mode_ll"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/griditems_bg"
        android:padding="12.0dip" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_mode_sdv_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            fresco:placeholderImage="@drawable/griditems_bg"
            />

        <com.xiangying.fighting.widget.FontTextView
            android:id="@+id/item_mode_tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mode_sdv_pic"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            android:text="采买"
            android:textColor="@color/colorTextBlank"
            android:textSize="14.0sp" />
    </RelativeLayout>

</RelativeLayout>